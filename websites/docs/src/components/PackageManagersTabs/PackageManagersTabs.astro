---
import {Tabs, TabItem} from '@astrojs/starlight/components';
import CodeBlock from "../CodeBlock/CodeBlock.astro";

export interface Props {
  code: string | {
    pnpm: string;
    npm: string;
    yarn: string;
  };
  prefix?: string;
}

const {code, prefix = ``} = Astro.props;
const packageManagers = ['pnpm', 'npm', 'yarn'];
---

<Tabs>
  {packageManagers.map(manager => (
    <TabItem label={manager}>
      <CodeBlock lang={`shell`} code={`${prefix}${prefix ? ` ` : ``}${manager} ${typeof code === 'string' ? code : code[manager]}`}/>
    </TabItem>
  ))}
</Tabs>
